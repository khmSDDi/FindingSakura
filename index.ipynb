   "source": [
    "# Load Events\n",
    "\n",
    "import pandas as pd\n",
    "\n",
    "BASE_DATE = '2020-01-01'"
    "\n",
    "csv_event = pd.read_csv('FindingSakura - FS_events.csv')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 15,
   "id": "016816ca-1ff6-46f5-9a84-fa401907e270",
